<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= link_to book.title, "books/#{book.id}" %>
      </td>
      <td>
        <%= link_to book.body, "books/#{book.id}" %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>

      <td>
        <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<h1>New book</h1>

<% if @book.errors.any? %>
  <div>2 error prohibited this book from being saved:</div>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_with model: @book, url:'/books', local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


